<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_two_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wiehan.tinnitusmanagement.twoBack">

    <TextView
        android:text='A sequence of letters will be displayed. When a letter is displayed more than once press the button. Press the "Start" button to start the game. '
        android:id="@+id/textExplain"
        android:layout_width="380dp"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_height="125dp" />

    <Button
        android:text="EXIT"
        android:id="@+id/exitButton"
        android:background="@drawable/my_personal_buttons"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textExplain" />

    <Button
        android:text="START"
        android:id="@+id/buttonStartSequence"
        android:background="@drawable/my_personal_buttons"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="37dp"
        android:layout_alignBottom="@+id/exitButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textCount"
        android:layout_marginTop="96dp"
        android:textSize="24sp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="C"
        android:layout_width="50dp"
        android:layout_below="@+id/textExplain"
        android:layout_toEndOf="@+id/buttonStartSequence" />
</RelativeLayout>
